<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dip"
    android:orientation="vertical" >

	<ImageView
	    android:id="@+id/handledImage"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:layout_marginRight="10dp"
	    android:src="@android:drawable/presence_invisible" />
	
	<TextView
	    android:id="@+id/overviewListItemColor"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingBottom="5dp"
	    android:paddingTop="5dp"
	    android:textSize="17dip"
	    android:layout_toRightOf="@+id/handledImage" />
	
	<TextView
	    android:id="@+id/overviewListItemStartTime"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBaseline="@+id/overviewListItemColor"
	    android:layout_alignBottom="@+id/overviewListItemColor"
	    android:layout_marginLeft="40dp"
	    android:layout_toRightOf="@+id/overviewListItemColor" />
	
	<TextView
	    android:id="@+id/overviewListItemTime"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignBaseline="@+id/overviewListItemColor"
	    android:layout_alignBottom="@+id/overviewListItemColor"
	    android:layout_marginLeft="10dp"
	    android:layout_toRightOf="@+id/overviewListItemStartTime"
	    android:layout_alignParentRight="true"
	    android:gravity="right"/>
 	
</RelativeLayout>
